# Set computer name
sudo scutil --set ComputerName "Jeremy"
sudo scutil --set HostName "Jeremy"
sudo scutil --set LocalHostName "Jeremy"

# Install homebrew
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew update

# Install the latest version of Bash.
brew install bash
sudo bash -c 'echo /usr/local/bin/bash >> /etc/shells'
chsh -s /usr/local/bin/bash

# Brew installing
brew install git
brew install node
brew install yarn
brew install homebrew/php/php71
sed -i".bak" "s/^\;phar.readonly.*$/phar.readonly = Off/g" /usr/local/etc/php/7.1/php.ini
sed -i "s/memory_limit = .*/memory_limit = -1/" /usr/local/etc/php/7.1/php.ini
brew install homebrew/php/composer
brew install homebrew/php/php-cs-fixer
composer global install

# Set a blazingly fast keyboard repeat rate
defaults write NSGlobalDomain KeyRepeat -int 1
defaults write NSGlobalDomain InitialKeyRepeat -int 10
